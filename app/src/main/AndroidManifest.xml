<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.xikolo"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="com.samsung.android.providers.context.permission.WRITE_USE_APP_FEATURE_SURVEY" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_circle"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.samsung.android.sdk.multiwindow.enable"
            android:value="true" />

        <meta-data
            android:name="de.xikolo.utils.GlideConfiguration"
            android:value="GlideModule"/>

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="de.xikolo.utils.CastOptionsProvider" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver
            android:name=".receivers.NetworkChangeReceiver"
            android:label="NetworkChangeReceiver">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receivers.DownloadCompletedReceiver"
            android:label="DownloadCompletedReceiver">
            <intent-filter>
                <action android:name="android.intent.action.DOWNLOAD_COMPLETE" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receivers.NotificationDeletedReceiver"
            android:exported="false"
            android:label="NotificationDeletedReceiver">
            <intent-filter>
                <action android:name="de.xikolo.intent.action.NOTIFICATION_DELETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppThemeTranslucentStatus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/app_host"
                    android:pathPattern="/news"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/dashboard"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.CourseActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses/..*/resume"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses/..*/pinboard"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses/..*/progress"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses/..*/learning_rooms"
                    android:scheme="https" />
                <data
                    android:host="@string/app_host"
                    android:pathPattern="/courses/..*/announcements"
                    android:scheme="https" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.CourseDetailsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.SecondScreenActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.LoginActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.ModuleActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.CourseActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.CourseActivity" />
        </activity>
        <activity
            android:name=".controllers.VideoActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.ModuleActivity"
            android:theme="@style/AppThemeDarkStatusBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.ModuleActivity" />
        </activity>
        <activity
            android:name=".controllers.DownloadsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.SettingsActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.MainActivity" />
        </activity>
        <activity
            android:name=".controllers.secondscreen.QuizActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.SecondScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SecondScreenActivity" />
        </activity>
        <activity
            android:name=".controllers.secondscreen.PinboardActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.SecondScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SecondScreenActivity" />
        </activity>
        <activity
            android:name=".controllers.secondscreen.SlideViewerActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.SecondScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SecondScreenActivity" />
        </activity>
        <activity
            android:name=".controllers.secondscreen.TranscriptViewerActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".controllers.SecondScreenActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.SecondScreenActivity" />
        </activity>

        <activity
            android:name=".controllers.CastActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName=".controllers.ModuleActivity"
            android:theme="@style/AppThemeDarkStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".controllers.ModuleActivity" />
        </activity>

    </application>

</manifest>
